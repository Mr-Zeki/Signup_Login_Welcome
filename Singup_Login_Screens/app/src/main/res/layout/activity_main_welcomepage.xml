<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>

</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomePage"
    android:background="@color/backGrndcolor">

    <TextView
        android:id="@+id/welcometxt"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="HOŞGELDİNİZ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/loggedUsr"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/welcometxt"
        app:layout_constraintStart_toStartOf="@+id/welcometxt"
        app:layout_constraintTop_toBottomOf="@+id/welcometxt" />

    <Button
        android:id="@+id/quitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:background="@color/backGrndcolor"
        android:shadowColor="@color/black"
        android:text="Çıkış Yap"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/loggedUsr"
        app:layout_constraintStart_toStartOf="@+id/loggedUsr"
        app:layout_constraintTop_toBottomOf="@+id/loggedUsr" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>